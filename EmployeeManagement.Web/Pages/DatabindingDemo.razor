<h3>DatabindingDemo</h3>
@page "/DatabindingDemo"
@inherits DatabindingDemoBase

<div>
    <b>Name :</b> @Name
    <br />
    <b>Name with salutation:</b> @(Gender == "Male" ? $"Mr. {Name}" : $"Miss. {Name}")
</div>
<div>
    <b>Name: </b><input value="@Name" />
</div>
<br />
<h3>Two Way Data Binding</h3>
<br />
<h5>1: Bind by value..</h5>
<br />
<b>Name :</b>
<input value="@Name" @onchange="@(e => { Name = e.Value.ToString(); })" />
<br />
<br />
<h5>2: Bind by Attribute..</h5>
<br />
<b>Name :</b>
<input @bind=Name />
<div>
    <h5>3: Bind by Attribute and OnInput Event</h5>
    <br />
    <b>Name :</b><input @bind=Name @bind:event="oninput" />
</div>

<hr />
<b>Colour :</b>
<input @bind="Colour" />

<div @bind-style="Colour" @bind-style:event="onchange">
    <h3>The background colour of this text changes</h3>
</div>
<b>Description</b>
<div>
    <textarea @bind="Description" @bind:event="oninput" style="width:500px"></textarea>
</div>
<div>
    Count: @Description.Length
</div>

