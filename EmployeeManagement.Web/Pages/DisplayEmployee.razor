@inherits DisplayEmployeeBase

    <div class="card m-3">
        <div class="card-header">
            <input type="checkbox" @onchange="CheckBoxChanged" />
            <h3>@employee.FirstName @employee.LastName</h3>
        </div>
        <img class="card-img-top imageThumbnail"
             src="@employee.PhotoPath" />
        @if (ShowFooter)
        {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{employee.EmployeeId}")" class="btn-primary m-1">View</a>
            <a href="@($"editemployee/{employee.EmployeeId}")" class="btn-primary m-1">Edit</a>
            <a href="#" class="btn-danger m-1">Delete</a>
        </div>
        }
    </div>

